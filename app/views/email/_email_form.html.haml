- content_for :head do
  = javascript_include_tag 'group_filters'

= form_tag(emails_path, {multipart: true, id: "email_form"}) do
  #email_header
    #recipient_header
      .email_fields_table
        .email_fields_row#to_row
          .email_label 
            To:
          .recipient_right
            = text_area :email, :to, :class => 'recipient_text', :multiple => true
        .email_fields_row#cc_row
          .email_label
            CC:
          .recipient_right
            = text_area :email, :cc, :class => 'recipient_text', :multiple => true
        .email_fields_row#bcc_row
          .email_label
            BCC:
          .recipient_right
            = text_area :email, :bcc, :class => 'recipient_text', :rows => 1, :multiple => true
    #subject_field
      .email_fields_table
        .email_fields_row
          .recipient_right
            = text_field :email, :subject, :class => 'subject_text', :placeholder => "Subject"

  #filter_label
    .email_label
      Filters:
    #filters
      %span{:class => "ui_fil" }
        .left_fil Student
        .x
    = link_to "change filters", "", :id => "change_filter"
    %div{:id => "button-group"}
      %div{:class => "btn-group"}
        %button{:type => "button", :class => "btn btn-primary dropdwon", 'data-toggle' => 'dropdown', 'aria-haspopup' => 'true', 'aria-expanded' => 'false'}
          Groups
          %span{:class => 'caret'}
        %ul{:class => "dropdown-menu", :id => "dmenu"}
          - @groups.each do |group|
            %li
              %a{:href => '#', :class => 'group_item', :onclick => 'grab_group_and_save()'}
                %meta group.filters
                = group.name

  %table#compose_box
    %tr
      %td= text_area :email, :body, :class => 'tinymce', :cols => 80, :rows => 20
    %tr
      %td
        .dropzone
          %div{class: "dz-default dz-message"}
            %span Drop files here or click to upload
          %div{id: 'dz-previews', class: "dropzone-previews"}
    %tr
      %td.submit_btns
        = submit_tag 'Send',  class: "btn send_btn",  id: "send_btn"
        = submit_tag 'Draft', class: "btn draft_btn", id: "draft_btn"
        = link_to "Delete", delete_path, :method => :delete, :class => "btn delete_btn", data: {confirm: "Are you sure?"}